<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Project.Website" 
                       description="Website definition items" 
                       dependencies="Foundation.Serialization" 
                       patch:after="configuration[@name='Foundation.Serialization']">
          <targetDataStore physicalRootPath="C:\_\sitecore-helix-sample\\src\project\Website\serialization" 
                           type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow" 
                           useDataCache="false" 
                           singleInstance="true" />
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <include name="Project.Coffee.Website.Templates" database="master" path="/sitecore/templates/project/Website" />
            <include name="Project.Coffee.Website.Renderings" database="master" path="/sitecore/layout/renderings/project/Website" />
          </predicate>
          <syncConfiguration type="Unicorn.Loader.DefaultSyncConfiguration, Unicorn" 
                             singleInstance="true" 
                             updateLinkDatabase="false" 
                             updateSearchIndex="true" 
                             maxConcurrency="1" />
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>